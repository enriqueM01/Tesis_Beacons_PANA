<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorButtonNormal">#282733</item>
    </style>

    <style name="main_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/main_button_style</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">true</item>


    </style>
</resources>